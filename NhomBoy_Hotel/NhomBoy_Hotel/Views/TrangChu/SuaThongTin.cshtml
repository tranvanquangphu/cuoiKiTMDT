</head>
<body>
    <div class="container">
        <h2 class="mt-3">CẬP NHẬT THÔNG TIN CÁ NHÂN</h2>
        <form action="@Url.Action("CapNhatThongTin", "TrangChu", new { MaKhachHang=ViewBag.MaKhachHang})" method="post">
            <div class="form-group">

                <label for="tenND">Họ và tên:@Model.HoTen</label>
                <input type="text" class="form-control" name="tenND" placeholder="@Model.HoTen">
            </div>
            <div class="form-group">
                <label for="gioiTinh">Giới tính:@Model.gioiTinh</label>
                <input type="text" class="form-control" name="gioiTinh" placeholder="@Model.gioiTinh">
            </div>
            <div class="form-group">
                <label for="ngaySinh">Ngày sinh: @ViewBag.ngaySinh</label>
                <input type="date" class="form-control" name="ngaySinh" placeholder="" onblur="formatNgaySinh()">
            </div>
            <div class="form-group">
                <label for="email">Email:@Model.Email</label>
                <input type="email" class="form-control" name="email" placeholder="@Model.Email">
            </div>
            <div class="form-group">
                <label for="SDT">Số điện thoại:@Model.SoDienThoai</label>
                <input type="text" class="form-control" name="SDT" placeholder="@Model.SoDienThoai">
            </div>
            <div class="form-group">
                <label for="diaChi">Địa chỉ:@Model.DiaChi </label>
                <input type="text" class="form-control" name="diaChi" placeholder="@Model.DiaChi">
            </div>
            <div class="form-group">
                <label for="soCCCD">Quốc gia: @Model.QuocGia</label>
                <div style="width: 340px; display: flex;height:50px">
                    <select name="quocGia" class="form-control">
                        <option value="Việt Nam">Việt Nam</option>
                        <option value="Mỹ">Mỹ</option>
                        <option value="Lào">Lào</option>
                        <option value="Thái Lan">Thái Lan</option>
                        <option value="Phi líp pin">Phi líp pin</option>
                    </select>
                </div>
            </div>
            <button type="submit" class="btn btn-primary" style="float:left;margin-left:200px;background:green;">Cập nhật</button>
            <button type="button" class="btn btn-primary" onclick="goXoa()" style="margin-left:200px;background:red">Khóa tài khoản</button>
            <button type="button" class="btn btn-primary" onclick="goBack()" style="float:right;margin-right:200px;color:black;background:yellow">Trở lại</button>
        </form>
        
    </div>
</body>
</html>
