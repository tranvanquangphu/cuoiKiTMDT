<div class="left_content">
    @foreach (var item in Model)
    {
        <div class="prod_box">
            <div class="top_prod_box"></div>
            <div class="center_prod_box">
                <div class="product_title" style="margin-bottom:6px;">
                    <a class="product_link" href="@Url.Action("XemChiTiet", "TrangChu", new { MaPhong = item.MaPhong,MaKhachHang=ViewBag.MaKhachHang})" style="text-decoration: none;">
                        <span style="font-size: larger; font-weight: bold">@item.MoTa (@item.SoPhong)</span>
                    </a>
                </div>

                <div class="product_img">
                    <a href="@Url.Action("XemChiTiet", "TrangChu", new { MaPhong = item.MaPhong,MaKhachHang=ViewBag.MaKhachHang })">
                        <img style="height:400px;width:300px" src="~/img/@Html.DisplayFor(modelItem => item.HinhAnh)" alt=""
                             border="0" />
                    </a>
                </div>
                <div class="prod_price" style="margin-top:10px">
                    <span class="price">Giá : @Html.DisplayFor(modelItem => item.GiaMoiDem) / Ngày</span>
                </div>
                <!-- Add the star rating here -->
                <div class="product_rating star-rating" style="margin-top:10px;float:right">
                    @for (int i = 0; i < item.SoSao; i++)
                    {
                        <span class="star">★</span>
                    }
                    @for (int? i = item.SoSao; i < 5; i++)
                    {
                        <span class="star" style="color: lightgray;">★</span>
                    }
                </div>
            </div>
            <div class="bottom_prod_box"></div>
            <div class="prod_details_tab">
                <div class="prod_details_tab" style="margin-top:50px">
                    <button onclick="window.location.href='@Url.Action("DienThongTin", "TrangChu", new { MaPhong = item.MaPhong, MaKhachHang = ViewBag.MaKhachHang })'" class="details_button">Đặt Phòng</button>
                </div>
            </div>
        </div>
    }
</div>


