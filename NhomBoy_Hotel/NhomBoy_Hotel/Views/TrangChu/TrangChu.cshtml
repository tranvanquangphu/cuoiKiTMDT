    <style>
        body, html {
            margin: 0;
            width: 99%;
            padding: 0;
            text-align:center;
        }

        .left_content {
            display: flex;
            flex-wrap: wrap;
            justify-content: center; /* Căn giữa theo chiều ngang */
            gap: 20px; /* Khoảng cách giữa các khối */
        }

        .prod_box {
            text-align: center; /* Căn giữa nội dung bên trong theo chiều ngang */
            border: 1px solid #ddd;
            padding: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 100%; /* Khối chiếm toàn bộ chiều rộng của cột */
            border: 1px solid #ddd;
        }

            .prod_box img {
                width: 100%; /* Cố định chiều rộng của hình ảnh */
                max-height: 350px; /* Cố định chiều cao tối đa của hình ảnh */
                max-width: 100%;
                height: auto;
                width: 100%; /* Cố định chiều rộng của hình ảnh */
            }

        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 96%;
            navbar margin: auto;
        }

        .left_menu {
            margin-top: 20px;
            text-align: center;
        }

            .left_menu ul {
                list-style: none;
                margin: 0;
                padding: 0;
                display: flex;
                justify-content: space-between;
            }

            .left_menu li {
                width: 30%; /* 3 cột với khoảng cách giữa mỗi cột */
                margin-bottom: 10px;
                margin-left: 10px;
            }

            .left_menu a {
                text-decoration: none;
                color: #333;
                background-color: #4CAF50;
                padding: 10px;
                border-radius: 5px;
                display: block;
                text-align: center;
            }

        .left_content {
            display: grid;
            grid-template-columns: repeat(3, 1fr); /* 3 cột với chiều rộng bằng nhau */
            gap: 20px; /* Khoảng cách giữa các khối */
            margin-top: 20px;
        }


        .row h2 {
            margin-top: 20px;
        }

        .details_button {
            background-color: #007BFF; /* Màu xanh dương */
            color: #fff; /* Màu chữ trắng */
            padding: 5px; /* Độ lớn của button */

            border-radius: 20px;
            cursor: pointer;
            width: 150px; /* Đặt chiều rộng mong muốn */
            height: 40px; /* Đặt chiều cao mong muốn */
        }

        .danhmuc {
            background-color: green;
            color: #fff; /* Màu chữ trắng */
            padding: 5px; /* Độ lớn của button */
            cursor: pointer;
            width: 150px; /* Đặt chiều rộng mong muốn */
            height: 40px; /* Đặt chiều cao mong muốn */
        }
        /*css me nu ngang */
        /* CSS cho thanh menu ngang */
        .navbar {
            overflow: hidden;
            background-color: #333; /* Màu nền của thanh menu */
            display: flex; /* Sử dụng Flexbox */
            justify-content: space-around; /* Các phần tử được phân bố đều theo chiều ngang */
            align-items: center; /* Căn giữa theo chiều dọc */
        }

            /* CSS cho các menu trong thanh menu */
            .navbar a {
                color: white;
                text-align: center;
                padding: 14px 20px;
                text-decoration: none;
            }

        /* CSS cho các menu con */
        .dropbtn {
            position: relative;
        }

        .dropdown .dropbtn {
            font-size: 16px;
            border: none;
            outline: none;
            color: white;
            padding: 14px 20px;
            background-color: inherit;
            font-family: inherit;
            margin: 0;
        }

        .navbar a:hover, .dropdown:hover .dropbtn {
            background-color: #555; /* Màu nền của menu khi rê chuột vào */
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #333; /* Màu nền của menu con */
            min-width: 160px;
            z-index: 1;
            text-align: left; /* Căn trái nội dung menu con */
        }

            .dropdown-content a {
                color: white;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
            }

                .dropdown-content a:hover {
                    background-color: #555; /* Màu nền của menu con khi rê chuột vào */
                }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .product_link:hover {
            color: red;
        }
      @* Khối thông tin *@
        .right_panel {
            position: fixed;
            top: 400px; /* hoặc vị trí nào bạn muốn */
            right: 0;
            background:green;
            width: 110px; /* Điều chỉnh kích thước tùy theo nhu cầu */
            height: 130px; /* Kích thước chiều cao tùy theo nhu cầu */
            padding:3px;
            text-align:center;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); /* Hiệu ứng bóng đổ */
            z-index: 999; /* Đảm bảo khối hiển thị trên các phần khác */
            overflow-y: auto; /* Cho phép cuộn khi nội dung quá dài */
            font-size:7px;
        }
        .star-rating {
            display: flex;
            align-items: center;
        }

        .star {
            font-size: 20px; /* Adjust size as needed */
            color: gold; /* Adjust color as needed */
            margin-right: 2px; /* Space between stars */
        }
        form {
            margin: 0 auto;
            width: 50%; /* Điều chỉnh kích thước form theo ý muốn */
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #f9f9f9;
        }

        label {
            font-weight: bold;
        }

        select, button {
            padding: 10px;
            margin-top: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #fff;
            font-size: 16px;
        }

        button {
            background-color: #007bff; /* Màu nút tìm kiếm */
            color: #fff; /* Màu chữ trên nút */
            cursor: pointer;
        }

            button:hover {
                background-color: #0056b3; /* Màu hover của nút */
            }
    </style>
